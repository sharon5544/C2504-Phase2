<Window x:Class="CounterProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CounterProject"
        mc:Ignorable="d"
        Title="Counter Project" Height="450" Width="800" Closed="Window_Closed">
    <Canvas>
        <TextBox x:Name="lblCounter" TextAlignment="Center"  HorizontalAlignment="Center" Height="51" Margin="291,99,0,0" TextWrapping="Wrap"  VerticalAlignment="Center" Width="195" Background="#FFCC7878" IsEnabled="False" Text="{Binding CounterValue}"/>
        <Button x:Name="btnPlus" Content="+" HorizontalAlignment="Left" Height="61" Margin="212,234,0,0" VerticalAlignment="Top" Width="138" Background="#FF715B97" Command="{Binding IncrementCommand}"/>
        <Button x:Name="btnMinus" Content="-" HorizontalAlignment="Left" Height="61" Margin="445,234,0,0" VerticalAlignment="Top" Width="138" Background="#FF9067D8" Command="{Binding DecrementCommand}"/>

    </Canvas>
</Window>
