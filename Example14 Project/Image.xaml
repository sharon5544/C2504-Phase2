<Window x:Class="Example14_Project.Image"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example14_Project"
        mc:Ignorable="d"
        Title="Image" Height="450" Width="800" Closing="Window_Closing">
    <Canvas>
        <Rectangle Height="79" Canvas.Left="246" Stroke="Black" Canvas.Top="108" Width="162" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Duck.jpg" Stretch="Fill">

                </ImageBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Ellipse Height="169" Canvas.Left="216" Stroke="Black" Canvas.Top="63" Width="222" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/pattern" TileMode="FlipX" Opacity="0.2" Stretch="UniformToFill" >

                </ImageBrush>
            </Ellipse.Fill>
        </Ellipse>

    </Canvas>
</Window>
